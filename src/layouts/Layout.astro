--- 
import GlobalStyles from '../components/GlobalStyles.astro';
import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content="Dario's homepage">
    <meta name="author" content="Dario Vogogna" />
    <meta name="author" content="akyrey" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="twitter:title" content="Dario Vogogna" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@akyrey90" />
    <meta name="twitter:creator" content="@akyrey90" />
    <meta property="og:site_name" content="Dario Vogogna" />
    <meta name="og:title" content="Dario Vogogna" />
    <meta property="og:type" content="website" />
		<meta name="generator" content={Astro.generator} />
    <GlobalStyles />
		<title>{title}</title>
	</head>
	<body>
    <Navbar path="" />
		<slot />
	</body>
</html>
<style is:global>
</style>
